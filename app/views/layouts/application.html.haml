      = yield
    .footer.push-2.span-13
      %hr
      .push-3.span-6
        =link_to("Hogenesch Lab", "http://bioinf.itmat.upenn.edu/hogeneschlab")
        | 
        =link_to("Panda Lab", "http://www.salk.edu/faculty/faculty_details.php?id=65")      
